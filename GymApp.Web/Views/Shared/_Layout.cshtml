<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GYM PRO</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --primary-color: #4f46e5; /* Indigo */
            --secondary-color: #0f172a; /* Slate 900 */
            --accent-color: #10b981; /* Emerald */
            --bg-light: #f8fafc;
            --text-dark: #1e293b;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-light);
            color: var(--text-dark);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Navbar Customization */
        .navbar {
            background-color: var(--secondary-color) !important;
            padding: 1rem 0;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            color: #fff !important;
            font-weight: 800;
            letter-spacing: -0.5px;
            font-size: 1.5rem;
        }

            .navbar-brand i {
                color: var(--primary-color);
            }

        .nav-link {
            color: #cbd5e1 !important; /* Açık gri */
            font-weight: 500;
            transition: all 0.3s;
        }

            .nav-link:hover, .nav-link.active {
                color: #fff !important;
                transform: translateY(-1px);
            }

        /* Buttons */
        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            padding: 0.6rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
        }

            .btn-primary:hover {
                background-color: #4338ca;
                border-color: #4338ca;
            }

        /* Footer */
        footer {
            margin-top: auto;
            background-color: #fff;
            border-top: 1px solid #e2e8f0;
            padding: 1.5rem 0;
            font-size: 0.9rem;
        }

        /* Card Hover Effects Global */
        .hover-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .hover-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05) !important;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
            <div class="container">
                <a class="navbar-brand" asp-area="@(User.IsInRole("Admin") ? "Admin" : "")"
                   asp-controller="@(User.IsInRole("Admin") ? "Gym" : "Home")"
                   asp-action="Index">
                    <i class="bi bi-activity me-2"></i>GYM PRO
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Yönetim</a>
                                <ul class="dropdown-menu shadow border-0 mt-2 rounded-3">
                                    <li><a class="dropdown-item py-2" asp-area="Admin" asp-controller="Gym" asp-action="Index"><i class="bi bi-building me-2"></i>Salonlar</a></li>
                                    <li><a class="dropdown-item py-2" asp-area="Admin" asp-controller="Service" asp-action="Index"><i class="bi bi-hdd-stack me-2"></i>Hizmetler</a></li>
                                    <li><a class="dropdown-item py-2" asp-area="Admin" asp-controller="Trainer" asp-action="Index"><i class="bi bi-person-badge me-2"></i>Antrenörler</a></li>
                                    <li><a class="dropdown-item py-2" asp-area="Admin" asp-controller="Member" asp-action="Index"><i class="bi bi-people me-2"></i>Üyeler</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item py-2" asp-area="Admin" asp-controller="Appointment" asp-action="Index"><i class="bi bi-calendar-check me-2"></i>Randevular</a></li>
                                </ul>
                            </li>
                        }

                        @if (User.IsInRole("Member"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Appointment" asp-action="MyList">Randevularım</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Appointment" asp-action="Create">Randevu Al</a></li>
                            <li class="nav-item">
                                <a class="nav-link text-warning fw-bold" asp-controller="AI" asp-action="Index">
                                    <i class="bi bi-robot me-1"></i> AI Coach
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto align-items-center gap-2">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item text-light me-2 d-none d-lg-block">
                                <small class="text-secondary d-block lh-1 text-end" style="font-size: 0.7rem;">Hoşgeldin</small>
                                <span>@User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-danger btn-sm px-3" asp-area="" asp-controller="Account" asp-action="Logout">Çıkış</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-light text-dark fw-bold px-4" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow-1">
        @RenderBody()
    </main>

    <footer class="footer text-muted text-center text-lg-start">
        <div class="container d-flex justify-content-between align-items-center">
            <div>
                &copy; 2025 <strong>GYM PRO</strong>. Tüm hakları saklıdır.
            </div>
            <div>
                <a href="#" class="text-decoration-none text-muted me-3"><i class="bi bi-instagram"></i></a>
                <a href="#" class="text-decoration-none text-muted"><i class="bi bi-twitter"></i></a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>