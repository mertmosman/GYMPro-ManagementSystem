@model GymApp.Web.ViewModels.AIRequestViewModel
@{
    ViewData["Title"] = "AI Antrenör";
    // Eğer Layout'ta section scripts varsa oraya taşıyacağız, yoksa inline script çalışır.
}

<style>
    .ai-gradient-text {
        background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .upload-zone {
        border: 2px dashed #cbd5e1;
        border-radius: 1rem;
        transition: all 0.3s ease;
        background-color: #f8fafc;
        cursor: pointer;
    }

        .upload-zone:hover, .upload-zone.active {
            border-color: #6366f1;
            background-color: #eef2ff;
        }

    .form-floating-custom > .form-control {
        border: 1px solid #e2e8f0;
        background-color: #f8fafc;
    }

        .form-floating-custom > .form-control:focus {
            background-color: #fff;
            border-color: #6366f1;
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        }

    .ai-result-content h3 {
        font-size: 1.25rem;
        font-weight: 700;
        margin-top: 1.5rem;
        color: #1e293b;
    }

    .ai-result-content ul {
        padding-left: 1.2rem;
        margin-bottom: 1rem;
    }

    .ai-result-content li {
        margin-bottom: 0.5rem;
        color: #475569;
    }

    .ai-result-content p {
        color: #334155;
        line-height: 1.7;
    }

    .ai-result-content strong {
        color: #0f172a;
        font-weight: 600;
    }
</style>

<div class="container py-5">

    <div class="text-center mb-5">
        <div class="d-inline-flex align-items-center justify-content-center p-3 rounded-circle bg-white shadow-sm mb-3">
            <i class="bi bi-robot fs-1 text-primary"></i>
        </div>
        <h1 class="display-5 fw-bold mb-2">Yapay Zeka <span class="ai-gradient-text">Vücut Analizi</span></h1>
        <p class="text-muted lead mx-auto" style="max-width: 600px;">
            Fotoğrafını yükle veya fiziksel özelliklerini gir. AI antrenörümüz sana özel antrenman ve beslenme tavsiyeleri oluştursun.
        </p>
    </div>

    <div class="row g-4">
        <div class="col-lg-5">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header border-0 bg-white pt-4 px-4 pb-0">
                    <h5 class="fw-bold mb-0"><i class="bi bi-sliders me-2 text-primary"></i>Veri Girişi</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="GeneratePlan" method="post" enctype="multipart/form-data" id="aiForm">

                        <div class="mb-4">
                            <label asp-for="Image" class="form-label fw-bold small text-muted">VÜCUT FOTOĞRAFI (Opsiyonel)</label>
                            <label class="upload-zone d-flex flex-column align-items-center justify-content-center p-4 w-100 text-center" for="uploadInput">
                                <i class="bi bi-cloud-arrow-up fs-2 text-primary mb-2"></i>
                                <span class="fw-semibold text-dark">Fotoğrafı sürükle veya seç</span>
                                <small class="text-muted mt-1">PNG, JPG (Max 5MB)</small>
                                <input asp-for="Image" type="file" id="uploadInput" class="d-none" accept="image/*" onchange="previewFile(this)">
                            </label>
                            <div id="filePreview" class="mt-2 d-none text-center">
                                <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill">
                                    <i class="bi bi-check-circle me-1"></i> <span id="fileName">image.jpg</span>
                                </span>
                            </div>
                        </div>

                        <hr class="border-light mb-4">

                        <div class="row g-3">
                            <div class="col-6">
                                <div class="form-floating form-floating-custom">
                                    <input asp-for="Age" class="form-control rounded-3" placeholder="Yaş">
                                    <label asp-for="Age">Yaş</label>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-floating form-floating-custom">
                                    <select asp-for="Gender" class="form-select rounded-3">
                                        <option value="Erkek">Erkek</option>
                                        <option value="Kadın">Kadın</option>
                                    </select>
                                    <label asp-for="Gender">Cinsiyet</label>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-floating form-floating-custom">
                                    <input asp-for="Height" class="form-control rounded-3" placeholder="Boy">
                                    <label asp-for="Height">Boy (cm)</label>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-floating form-floating-custom">
                                    <input asp-for="Weight" class="form-control rounded-3" placeholder="Kilo">
                                    <label asp-for="Weight">Kilo (kg)</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating form-floating-custom">
                                    <select asp-for="Goal" class="form-select rounded-3">
                                        <option value="Kilo Verme">Kilo Vermek & Yağ Yakmak</option>
                                        <option value="Kas Yapma">Kas Kütlesi Kazanmak (Hypertrophy)</option>
                                        <option value="Güç">Güçlenmek (Powerlifting)</option>
                                        <option value="Fit Olma">Sıkılaşmak ve Fit Olmak</option>
                                    </select>
                                    <label asp-for="Goal">Hedefin Nedir?</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold shadow-sm py-3"
                                    onclick="showLoading()"
                                    style="background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%); border:none;">
                                <span id="btnText"><i class="bi bi-stars me-2"></i>Analizi Başlat</span>
                                <span id="btnLoader" class="d-none"><span class="spinner-border spinner-border-sm me-2"></span>Analiz Ediliyor...</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-7">
            @if (ViewBag.Plan != null)
            {
                <div class="card border-0 shadow-lg rounded-4 h-100 animate__animated animate__fadeIn">
                    <div class="card-header bg-white border-bottom p-4">
                        <div class="d-flex align-items-center justify-content-between">
                            <h4 class="mb-0 fw-bold text-dark">
                                <i class="bi bi-file-earmark-medical me-2 text-success"></i>Analiz Raporu
                            </h4>
                            <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">Tamamlandı</span>
                        </div>
                    </div>
                    <div class="card-body p-4 bg-light bg-opacity-25">
                        <div class="ai-result-content">
                            @Html.Raw(ViewBag.Plan)
                        </div>

                        <div class="mt-4 p-3 bg-white border rounded-3 shadow-sm">
                            <div class="d-flex gap-2">
                                <button class="btn btn-outline-primary btn-sm flex-grow-1"><i class="bi bi-download me-1"></i> PDF İndir</button>
                                <button class="btn btn-outline-secondary btn-sm flex-grow-1"><i class="bi bi-share me-1"></i> Paylaş</button>
                                <a asp-controller="Appointment" asp-action="Create" class="btn btn-success btn-sm flex-grow-1"><i class="bi bi-calendar-check me-1"></i> Randevu Al</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card border-0 shadow-sm rounded-4 h-100 bg-white">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-5 text-muted">
                        <div class="mb-4 p-4 rounded-circle bg-light">
                            <i class="bi bi-cpu fs-1 text-secondary opacity-50"></i>
                        </div>
                        <h4 class="fw-bold text-dark">Sonuçlar Burada Görünecek</h4>
                        <p class="mb-4" style="max-width: 400px;">
                            Sol taraftaki formu doldurup "Analizi Başlat" butonuna tıkladığında, yapay zeka senin için özelleştirilmiş bir rapor oluşturacak.
                        </p>

                        <div class="row g-3 w-100 mt-2">
                            <div class="col-md-4">
                                <div class="p-3 border rounded-3 bg-light">
                                    <i class="bi bi-lightning-charge text-warning d-block mb-2 fs-4"></i>
                                    <small class="fw-bold">Hızlı Analiz</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="p-3 border rounded-3 bg-light">
                                    <i class="bi bi-shield-check text-success d-block mb-2 fs-4"></i>
                                    <small class="fw-bold">Güvenli Veri</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="p-3 border rounded-3 bg-light">
                                    <i class="bi bi-magic text-primary d-block mb-2 fs-4"></i>
                                    <small class="fw-bold">Kişiye Özel</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
    function previewFile(input) {
        if (input.files && input.files[0]) {
            var fileName = input.files[0].name;
            document.getElementById('fileName').textContent = fileName;
            document.getElementById('filePreview').classList.remove('d-none');

            // Zone border active
            document.querySelector('.upload-zone').classList.add('active');
        }
    }

    function showLoading() {
        // Form validasyonunu kontrol et (Basitçe HTML5 validasyonu)
        if(document.getElementById('aiForm').checkValidity()){
            document.getElementById('btnText').classList.add('d-none');
            document.getElementById('btnLoader').classList.remove('d-none');
        }
    }
</script>