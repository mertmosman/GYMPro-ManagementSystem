@model GymApp.Web.ViewModels.AIRequestViewModel
@{
    ViewData["Title"] = "AI Görsel Analiz";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-5">
            <div class="card shadow border-primary">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-camera"></i> Fotoğraflı Analiz</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted small">Fotoğrafını yükle veya bilgilerini gir, yapay zeka vücut tipini analiz edip program yazsın.</p>

                    <form asp-action="GeneratePlan" method="post" enctype="multipart/form-data">

                        <div class="mb-3 p-3 bg-light border rounded text-center">
                            <label asp-for="Image" class="form-label fw-bold">Vücut Fotoğrafı (Opsiyonel)</label>
                            <input asp-for="Image" type="file" class="form-control" accept="image/*" />
                            <small class="text-muted d-block mt-1">Daha doğru analiz için boydan fotoğraf önerilir.</small>
                        </div>

                        <div class="row">
                            <div class="col-6 mb-2">
                                <label>Yaş</label>
                                <input asp-for="Age" class="form-control" placeholder="25" />
                            </div>
                            <div class="col-6 mb-2">
                                <label>Cinsiyet</label>
                                <select asp-for="Gender" class="form-select">
                                    <option value="Erkek">Erkek</option>
                                    <option value="Kadın">Kadın</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 mb-2">
                                <label>Boy (cm)</label>
                                <input asp-for="Height" class="form-control" placeholder="180" />
                            </div>
                            <div class="col-6 mb-2">
                                <label>Kilo (kg)</label>
                                <input asp-for="Weight" class="form-control" placeholder="80" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label>Hedef</label>
                            <select asp-for="Goal" class="form-select">
                                <option value="Kilo Verme">Kilo Vermek & Yağ Yakmak</option>
                                <option value="Kas Yapma">Kas Kütlesi Kazanmak</option>
                                <option value="Fit Olma">Sıkılaşmak ve Fit Olmak</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-magic"></i> Analiz Et ve Program Yaz
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            @if (ViewBag.Plan != null)
            {
                <div class="card shadow h-100 border-success">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0">✨ AI Antrenörün Tavsiyesi</h4>
                    </div>
                    <div class="card-body">
                        @Html.Raw(ViewBag.Plan)
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-light text-center border p-5">
                    <i class="bi bi-images display-4 text-muted"></i>
                    <p class="mt-3">Henüz bir analiz yapılmadı.</p>
                </div>
            }
        </div>
    </div>
</div>