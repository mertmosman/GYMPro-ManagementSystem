@{
    ViewData["Title"] = "Erişim Reddedildi";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-lg rounded-4 text-center overflow-hidden">
                <div class="card-body p-5">

                    <div class="mb-4 position-relative d-inline-block">
                        <div class="position-absolute top-50 start-50 translate-middle"
                             style="width: 120px; height: 120px; background-color: #fee2e2; border-radius: 50%; opacity: 0.5;"></div>
                        <i class="bi bi-shield-lock-fill text-danger position-relative" style="font-size: 5rem;"></i>
                    </div>

                    <h2 class="fw-bold text-dark mb-3">Erişim Reddedildi</h2>

                    <p class="text-muted mb-4">
                        Üzgünüz, bu sayfayı görüntülemek için gerekli yetkilere sahip değilsiniz. Bunun bir hata olduğunu düşünüyorsanız yöneticinizle iletişime geçin.
                    </p>

                    <div class="d-grid gap-2">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-dark btn-lg rounded-3">
                            <i class="bi bi-house-door me-2"></i>Ana Sayfaya Dön
                        </a>
                        <a href="javascript:history.back()" class="btn btn-link text-muted text-decoration-none">
                            <i class="bi bi-arrow-left me-1"></i>Bir Önceki Sayfa
                        </a>
                    </div>
                </div>
                <div class="card-footer bg-light border-0 py-3">
                    <small class="text-muted">Hata Kodu: 403 Forbidden</small>
                </div>
            </div>
        </div>
    </div>
</div>