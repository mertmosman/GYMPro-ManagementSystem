@model GymApp.Web.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">

            <div class="text-center mb-4">
                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                    <i class="bi bi-activity fs-2"></i>
                </div>
                <h2 class="fw-bold">Tekrar Hoşgeldin!</h2>
                <p class="text-muted">Hesabına giriş yap ve spora başla.</p>
            </div>

            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3 small border-0 shadow-sm"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control bg-light border-0" placeholder="name@example.com" />
                            <label asp-for="Email" class="text-muted">E-posta Adresi</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Password" type="password" class="form-control bg-light border-0" placeholder="Şifre" />
                            <label asp-for="Password" class="text-muted">Şifre</label>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="RememberMe" />
                                <label class="form-check-label small text-muted" asp-for="RememberMe">
                                    Beni Hatırla
                                </label>
                            </div>
                            <a href="#" class="small text-decoration-none fw-bold text-primary">Şifremi Unuttum?</a>
                        </div>

                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold shadow-sm">
                                Giriş Yap <i class="bi bi-arrow-right ms-2"></i>
                            </button>
                        </div>

                        <div class="text-center">
                            <span class="text-muted small">Hesabın yok mu?</span>
                            <a asp-action="Register" class="fw-bold text-decoration-none ms-1">Hemen Kayıt Ol</a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4 text-muted small opacity-50">
                &copy; 2025 GYM PRO. Güvenli Giriş Sistemi.
            </div>

        </div>
    </div>
</div>