@model List<GymApp.Web.Entities.Appointment>

@{
    ViewData["Title"] = "Randevularım";
}

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold mb-1">Randevularım</h2>
            <p class="text-muted mb-0">Geçmiş ve gelecek antrenman programınız.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary shadow-sm px-4">
            <i class="bi bi-plus-lg me-2"></i>Yeni Randevu
        </a>
    </div>

    @if (Model.Count == 0)
    {
        <div class="card border-0 shadow-sm rounded-4 bg-white">
            <div class="card-body text-center py-5">
                <div class="mb-4 p-4 rounded-circle bg-light d-inline-block">
                    <i class="bi bi-calendar-x fs-1 text-muted opacity-50"></i>
                </div>
                <h4>Henüz randevunuz bulunmuyor</h4>
                <p class="text-muted mb-4">Kendine bir iyilik yap ve hemen ilk antrenmanını planla.</p>
                <a asp-action="Create" class="btn btn-primary">Hemen Başla</a>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm rounded-4 hover-card transition-all">
                        <div class="card-header bg-white border-0 pt-4 px-4 d-flex justify-content-between align-items-start">
                            <div class="d-flex flex-column">
                                <span class="display-6 fw-bold text-dark lh-1">@item.AppointmentDate.Day</span>
                                <span class="text-uppercase small fw-bold text-muted">@item.AppointmentDate.ToString("MMMM")</span>
                            </div>

                            @if (item.Status == "Beklemede")
                            {
                                <span class="badge bg-soft-warning text-warning border border-warning border-opacity-25 rounded-pill px-3 py-2">
                                    <i class="bi bi-hourglass-split me-1"></i>İnceleniyor
                                </span>
                            }
                            else if (item.Status == "Onaylandı")
                            {
                                <span class="badge bg-soft-success text-success border border-success border-opacity-25 rounded-pill px-3 py-2">
                                    <i class="bi bi-check-circle-fill me-1"></i>Onaylandı
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-soft-danger text-danger border border-danger border-opacity-25 rounded-pill px-3 py-2">
                                    <i class="bi bi-x-circle-fill me-1"></i>Reddedildi
                                </span>
                            }
                        </div>

                        <div class="card-body px-4 pb-4 pt-2">
                            <hr class="border-light mb-3">

                            <div class="mb-3">
                                <span class="badge bg-light text-dark fs-6 border fw-normal">
                                    <i class="bi bi-clock me-2 text-primary"></i>@item.AppointmentDate.ToString("HH:mm")
                                </span>
                            </div>

                            <h5 class="fw-bold mb-1">@item.Service.Name</h5>
                            <p class="text-muted small mb-0">
                                <i class="bi bi-person-fill me-1"></i> @item.Trainer.FullName
                            </p>
                            <p class="text-muted small">
                                <i class="bi bi-building me-1"></i> @(item.Service.Gym != null ? item.Service.Gym.Name : "Bilinmeyen Salon")
                            </p>
                        </div>

                        <div class="card-footer bg-light border-0 px-4 py-3">
                            <small class="text-muted" style="font-size: 0.75rem;">
                                Oluşturulma: @item.CreatedDate.ToShortDateString()
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    /* MyList Sayfası için Ekstra Badge Stilleri (Eğer Layoutta yoksa) */
    .bg-soft-warning {
        background-color: #fff7ed;
    }

    .bg-soft-success {
        background-color: #f0fdf4;
    }

    .bg-soft-danger {
        background-color: #fef2f2;
    }

    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1) !important;
    }

    .transition-all {
        transition: all 0.3s ease;
    }
</style>