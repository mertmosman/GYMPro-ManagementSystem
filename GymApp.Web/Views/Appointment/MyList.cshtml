@model List<GymApp.Web.Entities.Appointment>

@{
    ViewData["Title"] = "Randevularım";
}

<div class="container mt-4">
    <h2>Randevularım</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Yeni Randevu Al</a>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">Henüz randevunuz yok.</div>
    }
    else
    {
        <div class="list-group">
            @foreach (var item in Model)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">@item.Service.Name</h5>
                        <p class="mb-1">
                            <strong>Eğitmen:</strong> @item.Trainer.FullName <br />
                            <strong>Tarih:</strong> @item.AppointmentDate.ToString("dd MMMM yyyy - HH:mm") <br />

                            <strong>Durum:</strong>
                            @if (item.Status == "Beklemede")
                            {
                                <span class="badge bg-warning text-dark">İnceleniyor</span>
                            }
                            else if (item.Status == "Onaylandı")
                            {
                                <span class="badge bg-success">Onaylandı</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Reddedildi</span>
                            }
                        </p>
                    </div>
                    <small class="text-muted">@item.CreatedDate.ToShortDateString() tarihinde alındı.</small>
                </div>
            }
        </div>
    }
</div>