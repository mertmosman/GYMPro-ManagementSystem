@model List<GymApp.Web.Entities.Gym>

@{
    ViewData["Title"] = "Salon Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-1">Spor Salonları</h2>
            <p class="text-muted mb-0">Sistemdeki tüm şubelerin yönetimi</p>
        </div>
        <a asp-action="Create" class="btn btn-primary shadow-sm px-4">
            <i class="bi bi-plus-lg me-2"></i>Yeni Salon Ekle
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden bg-white">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 text-secondary text-uppercase small fw-bold" style="width: 40%;">Salon Bilgisi</th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold">Konum</th>
                        <th class="pe-4 py-3 text-secondary text-uppercase small fw-bold text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || Model.Count == 0)
                    {
                        <tr>
                            <td colspan="3" class="text-center py-5">
                                <div class="text-muted">
                                    <i class="bi bi-building-add fs-1 d-block mb-3 opacity-50"></i>
                                    <p class="mb-0">Henüz kayıtlı bir salon bulunmamaktadır.</p>
                                    <small>Yeni eklemek için sağ üstteki butonu kullanın.</small>
                                </div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-3 overflow-hidden me-3 shadow-sm" style="width: 60px; height: 60px;">
                                            <img src="https://source.unsplash.com/100x100/?gym,fitness&sig=@item.Id"
                                                 class="w-100 h-100 object-fit-cover" alt="Gym">
                                        </div>
                                        <div>
                                            <h6 class="mb-1 fw-bold text-dark">@item.Name</h6>
                                            <span class="badge bg-soft-info text-primary border border-primary border-opacity-10 rounded-pill" style="font-size: 0.7rem;">Aktif Şube</span>
                                        </div>
                                    </div>
                                </td>

                                <td class="py-3">
                                    <div class="text-muted small" style="max-width: 300px;">
                                        <i class="bi bi-geo-alt-fill text-danger me-1"></i>
                                        @item.Address
                                    </div>
                                </td>

                                <td class="pe-4 py-3 text-end">
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light btn-sm text-dark border shadow-sm me-2" data-bs-toggle="tooltip" title="Düzenle">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-light btn-sm text-danger border shadow-sm"
                                           onclick="return confirm('Bu salonu ve tüm verilerini silmek istediğinize emin misiniz?');"
                                           data-bs-toggle="tooltip" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>