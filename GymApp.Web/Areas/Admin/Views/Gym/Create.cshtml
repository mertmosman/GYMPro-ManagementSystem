@model GymApp.Web.Entities.Gym

@{
    ViewData["Title"] = "Yeni Salon Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <form asp-action="Create" method="post">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="fw-bold mb-0">Yeni Salon Ekle</h2>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-left me-1"></i>Listeye Dön
                    </a>
                </div>

                <div class="card border-0 shadow-sm rounded-4 mb-4">
                    <div class="card-body p-4">
                        <h5 class="fw-bold text-primary mb-3"><i class="bi bi-info-circle me-2"></i>Genel Bilgiler</h5>
                        <div asp-validation-summary="All" class="alert alert-danger mb-3" role="alert" style="display:none;"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold small text-muted">SALON ADI</label>
                            <input asp-for="Name" class="form-control form-control-lg bg-light border-0" placeholder="Örn: Kadıköy Şubesi" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-0">
                            <label asp-for="Address" class="form-label fw-bold small text-muted">ADRES</label>
                            <textarea asp-for="Address" class="form-control bg-light border-0" rows="3" placeholder="Tam adres bilgisi giriniz..."></textarea>
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-sm rounded-4 mb-4">
                    <div class="card-body p-4">
                        <h5 class="fw-bold text-success mb-3"><i class="bi bi-clock-history me-2"></i>Çalışma Saatleri</h5>
                        <p class="text-muted small mb-4">Salonun kapalı olduğu günlerde anahtarı kapalı konuma getiriniz.</p>

                        <div class="d-flex flex-column gap-3">
                            @for (int i = 0; i < Model.Schedules.Count; i++)
                            {
                                <div class="p-3 border rounded-3 bg-white hover-shadow transition-all">
                                    <div class="row align-items-center">
                                        <div class="col-4 col-md-3">
                                            <input type="hidden" asp-for="Schedules[i].Day" />
                                            <span class="fw-bold text-dark">@Model.Schedules[i].Day</span>
                                        </div>

                                        <div class="col-4 col-md-3 text-center">
                                            <div class="form-check form-switch d-inline-block">
                                                <input class="form-check-input closed-switch" type="checkbox"
                                                       asp-for="Schedules[i].IsClosed"
                                                       id="switch_@i"
                                                       onchange="toggleInputs(@i)">
                                                <label class="form-check-label small text-muted" for="switch_@i">Kapalı</label>
                                            </div>
                                        </div>

                                        <div class="col-12 col-md-6 mt-2 mt-md-0">
                                            <div class="input-group input-group-sm" id="time_inputs_@i">
                                                <span class="input-group-text bg-light">Açılış</span>
                                                <input type="time" class="form-control" asp-for="Schedules[i].OpeningTime" />
                                                <span class="input-group-text bg-light">Kapanış</span>
                                                <input type="time" class="form-control" asp-for="Schedules[i].ClosingTime" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="d-grid mb-5">
                    <button type="submit" class="btn btn-primary btn-lg shadow fw-bold">
                        <i class="bi bi-check-lg me-2"></i>Salonu Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleInputs(index) {
            var isClosed = document.getElementById('switch_' + index).checked;
            var inputsContainer = document.getElementById('time_inputs_' + index);
            var inputs = inputsContainer.getElementsByTagName('input');

            for(var i = 0; i < inputs.length; i++) {
                inputs[i].disabled = isClosed;
                if(isClosed) {
                    inputsContainer.classList.add('opacity-50');
                } else {
                    inputsContainer.classList.remove('opacity-50');
                }
            }
        }
    </script>
}