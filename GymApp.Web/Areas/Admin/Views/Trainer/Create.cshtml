@model GymApp.Web.Entities.Trainer

@{
    ViewData["Title"] = "Yeni Antrenör";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var allGyms = ViewBag.Gyms as List<GymApp.Web.Entities.Gym>;
    var allServices = ViewBag.Services as List<GymApp.Web.Entities.Service>;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <form asp-action="Create" method="post">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="fw-bold mb-0">Yeni Antrenör Ekle</h2>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Geri Dön</a>
                </div>

                <div class="card border-0 shadow-sm rounded-4 mb-4">
                    <div class="card-body p-4">
                        <h5 class="fw-bold text-dark mb-3"><i class="bi bi-person-badge me-2 text-primary"></i>Profil Bilgileri</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="FullName" class="form-label fw-bold small text-muted">AD SOYAD</label>
                                <input asp-for="FullName" class="form-control bg-light border-0" placeholder="Örn: Burak Çelik" />
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Specialty" class="form-label fw-bold small text-muted">UZMANLIK ALANI</label>
                                <input asp-for="Specialty" class="form-control bg-light border-0" placeholder="Örn: Fitness & Bodybuilding" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-sm rounded-4 mb-4">
                    <div class="card-body p-4">
                        <h5 class="fw-bold text-dark mb-3"><i class="bi bi-buildings me-2 text-primary"></i>Çalışma Salonları</h5>
                        <p class="text-muted small mb-3">Antrenörün aktif olarak çalışacağı şubeleri seçiniz.</p>

                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var gym in allGyms)
                            {
                                <input type="checkbox" class="btn-check gym-checkbox"
                                       name="selectedGymIds" value="@gym.Id" id="gym_@gym.Id"
                                       data-gym-id="@gym.Id" autocomplete="off">

                                <label class="btn btn-outline-primary border-2 fw-semibold py-2 px-3 rounded-3" for="gym_@gym.Id">
                                    <i class="bi bi-geo-alt me-1"></i>@gym.Name
                                </label>
                            }
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-sm rounded-4 mb-4 bg-light">
                    <div class="card-body p-4">
                        <h5 class="fw-bold text-dark mb-3"><i class="bi bi-activity me-2 text-primary"></i>Verilebilecek Hizmetler</h5>

                        <div id="servicesContainer" class="row g-3">
                            @foreach (var service in allServices)
                            {
                                <div class="col-md-6 service-item d-none" data-gym-id="@service.GymId">
                                    <input type="checkbox" class="btn-check"
                                           name="selectedServiceIds" value="@service.Id" id="srv_@service.Id" autocomplete="off">

                                    <label class="card h-100 cursor-pointer border-0 shadow-sm btn-outline-light text-start p-0 overflow-hidden position-relative" for="srv_@service.Id">
                                        <div class="card-body p-3">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="fw-bold text-dark service-name">@service.Name</span>
                                                <i class="bi bi-check-circle-fill text-success fs-5 check-icon d-none"></i>
                                            </div>
                                            <small class="text-muted d-block mt-1">
                                                <i class="bi bi-building me-1"></i>@service.Gym.Name
                                            </small>
                                        </div>
                                        <div class="active-border"></div>
                                    </label>
                                </div>
                            }
                        </div>

                        <div id="helperText" class="text-center py-4 text-muted">
                            <i class="bi bi-arrow-up-circle fs-2 d-block mb-2 opacity-50"></i>
                            <p>Hizmetleri görüntülemek için yukarıdan en az bir salon seçiniz.</p>
                        </div>
                    </div>
                </div>

                <div class="d-grid mb-5">
                    <button type="submit" class="btn btn-primary btn-lg shadow fw-bold">
                        <i class="bi bi-check-lg me-2"></i>Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /* Salon Butonu Seçili İse */
    .btn-check:checked + .btn-outline-primary {
        background-color: #eff6ff; /* Açık mavi */
        color: #2563eb;
        border-color: #2563eb;
    }

    /* Hizmet Kartı Seçili İse */
    .btn-check:checked + label .card-body {
        background-color: #fff;
        border: 2px solid #10b981; /* Yeşil Kenarlık */
        border-radius: 0.5rem;
    }

    .btn-check:checked + label .check-icon {
        display: block !important;
    }

    /* Hover Efekti */
    label.card:hover {
        transform: translateY(-2px);
        transition: all 0.2s;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".gym-checkbox").change(function () {
                var gymId = $(this).data("gym-id");
                var isChecked = $(this).is(":checked");

                var relatedServices = $(`.service-item[data-gym-id='${gymId}']`);

                if (isChecked) {
                    relatedServices.removeClass("d-none").hide().fadeIn();
                    $("#helperText").hide();
                } else {
                    relatedServices.addClass("d-none");
                    // Seçimi kaldır (Backend'e yanlış veri gitmesin)
                    relatedServices.find("input[type='checkbox']").prop("checked", false);
                }

                if ($(".gym-checkbox:checked").length === 0) {
                    $("#helperText").show();
                }
            });
        });
    </script>
}