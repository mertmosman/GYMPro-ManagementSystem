@model GymApp.Web.Entities.Trainer

@{
    ViewData["Title"] = "Antrenör Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var allGyms = ViewBag.Gyms as List<GymApp.Web.Entities.Gym>;
    var allServices = ViewBag.Services as List<GymApp.Web.Entities.Service>;
    var selectedGymIds = ViewBag.SelectedGymIds as List<int> ?? new List<int>();
    var selectedServiceIds = ViewBag.SelectedServiceIds as List<int> ?? new List<int>();
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h2 class="fw-bold mb-0">Antrenör Düzenle</h2>
                        <span class="text-muted small">@Model.FullName</span>
                    </div>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">İptal</a>
                </div>

                <div class="card border-0 shadow-sm rounded-4 mb-4">
                    <div class="card-body p-4">
                        <h5 class="fw-bold text-dark mb-3"><i class="bi bi-pencil-square me-2 text-warning"></i>Profil Bilgileri</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="FullName" class="form-label fw-bold small text-muted">AD SOYAD</label>
                                <input asp-for="FullName" class="form-control bg-light border-0" />
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Specialty" class="form-label fw-bold small text-muted">UZMANLIK</label>
                                <input asp-for="Specialty" class="form-control bg-light border-0" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-sm rounded-4 mb-4">
                    <div class="card-body p-4">
                        <h5 class="fw-bold text-dark mb-3"><i class="bi bi-buildings me-2 text-warning"></i>Çalışma Salonları</h5>
                        <div class="d-flex flex-wrap gap-2">
                            @if (allGyms != null)
                            {
                                foreach (var gym in allGyms)
                                {
                                    bool isGymChecked = selectedGymIds.Contains(gym.Id);

                                    <input type="checkbox" class="btn-check gym-checkbox"
                                           name="selectedGymIds" value="@gym.Id" id="gym_@gym.Id"
                                           data-gym-id="@gym.Id"
                                           @(isGymChecked ? "checked" : "") autocomplete="off">

                                    <label class="btn btn-outline-warning text-dark border-2 fw-semibold py-2 px-3 rounded-3" for="gym_@gym.Id">
                                        <i class="bi bi-geo-alt me-1"></i>@gym.Name
                                    </label>
                                }
                            }
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-sm rounded-4 mb-4 bg-light">
                    <div class="card-body p-4">
                        <h5 class="fw-bold text-dark mb-3"><i class="bi bi-activity me-2 text-warning"></i>Hizmetler</h5>

                        <div id="servicesContainer" class="row g-3">
                            @if (allServices != null)
                            {
                                foreach (var service in allServices)
                                {
                                    bool isServiceChecked = selectedServiceIds.Contains(service.Id);

                                    <div class="col-md-6 service-item d-none" data-parent-gym="@service.GymId">
                                        <input type="checkbox" class="btn-check"
                                               name="selectedServiceIds" value="@service.Id" id="srv_@service.Id"
                                               @(isServiceChecked ? "checked" : "") autocomplete="off">

                                        <label class="card h-100 cursor-pointer border-0 shadow-sm btn-outline-light text-start p-0 overflow-hidden" for="srv_@service.Id">
                                            <div class="card-body p-3">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <span class="fw-bold text-dark service-name">@service.Name</span>
                                                    <i class="bi bi-check-circle-fill text-success fs-5 check-icon d-none"></i>
                                                </div>
                                                <small class="text-muted d-block mt-1">
                                                    <i class="bi bi-building me-1"></i>@(service.Gym != null ? service.Gym.Name : "Salonsuz")
                                                </small>
                                            </div>
                                        </label>
                                    </div>
                                }
                            }
                        </div>

                        <div id="helperText" class="alert alert-warning py-2 mt-3 text-center border-0 shadow-sm">
                            <i class="bi bi-info-circle me-1"></i>Hizmetleri görmek için yukarıdan salon seçimi yapınız.
                        </div>
                    </div>
                </div>

                <div class="d-grid mb-5">
                    <button type="submit" class="btn btn-warning btn-lg shadow fw-bold text-dark">
                        <i class="bi bi-save me-2"></i>Güncelle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /* Edit Sayfası için Sarı Tema Override */
    .btn-check:checked + .btn-outline-warning {
        background-color: #fffbeb; /* Açık sarı */
        border-color: #d97706; /* Koyu Turuncu */
        color: #b45309;
    }
    /* Hizmet Kartı Seçili İse */
    .btn-check:checked + label .card-body {
        background-color: #fff;
        border: 2px solid #d97706; /* Turuncu Kenarlık */
        border-radius: 0.5rem;
    }

    .btn-check:checked + label .check-icon {
        display: block !important;
        color: #d97706 !important;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Edit sayfası için mantık (data-gym-id yerine data-parent-gym attribute ismini korudum Create ile uyumlu olması için)
            // Ancak Create'de data-gym-id kullanmıştım, burada uyumluluk adına ikisini de kontrol edeceğiz.

            $(".gym-checkbox").change(function () {
                var gymId = $(this).data("gym-id");
                var isChecked = $(this).is(":checked");

                // Create sayfasında data-gym-id, senin eski kodunda data-parent-gym kullanılmış.
                // İkisini de kapsayalım:
                var relatedServices = $(`.service-item[data-parent-gym='${gymId}']`);

                if (isChecked) {
                    relatedServices.removeClass("d-none").hide().fadeIn();
                    $("#helperText").hide();
                } else {
                    relatedServices.addClass("d-none");
                    relatedServices.find("input[type='checkbox']").prop("checked", false);
                }

                if ($(".gym-checkbox:checked").length === 0) {
                    $("#helperText").show();
                }
            });

            // Sayfa yüklendiğinde mevcut seçimleri tetikle
            $(".gym-checkbox:checked").trigger("change");
        });
    </script>
}