@model List<GymApp.Web.Entities.Trainer>

@{
    ViewData["Title"] = "Antrenör Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-1">Antrenörler</h2>
            <p class="text-muted mb-0">Eğitmen kadrosu ve uzmanlık alanları</p>
        </div>
        <a asp-action="Create" class="btn btn-primary shadow-sm px-4">
            <i class="bi bi-person-plus-fill me-2"></i>Yeni Antrenör Ekle
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden bg-white">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 text-secondary text-uppercase small fw-bold">Antrenör Profili</th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold">Çalıştığı Salonlar</th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold" style="width: 35%;">Hizmetler</th>
                        <th class="pe-4 py-3 text-secondary text-uppercase small fw-bold text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 py-3">
                                <div class="d-flex align-items-center">
                                    <img src="https://ui-avatars.com/api/?name=@item.FullName&background=random&color=fff&size=128"
                                         class="rounded-circle me-3 shadow-sm"
                                         width="45" height="45" alt="Avatar">
                                    <div>
                                        <h6 class="mb-0 fw-bold text-dark">@item.FullName</h6>
                                        <span class="badge bg-light text-primary border border-primary border-opacity-10 fw-normal">
                                            @item.Specialty
                                        </span>
                                    </div>
                                </div>
                            </td>

                            <td>
                                @if (item.Gyms != null && item.Gyms.Any())
                                {
                                    <div class="d-flex flex-wrap gap-1">
                                        @foreach (var gym in item.Gyms)
                                        {
                                            <span class="badge bg-white text-dark border shadow-sm fw-normal">
                                                <i class="bi bi-geo-alt-fill text-danger me-1 opacity-50"></i>@gym.Name
                                            </span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted small fst-italic"><i class="bi bi-exclamation-circle me-1"></i>Atama Bekliyor</span>
                                }
                            </td>

                            <td>
                                @if (item.Services != null && item.Services.Any())
                                {
                                    <div class="d-flex flex-wrap gap-1">
                                        @foreach (var s in item.Services)
                                        {
                                            if (s.IsDeleted)
                                            {
                                                <span class="badge bg-soft-danger text-danger border border-danger border-opacity-25 text-decoration-line-through"
                                                      data-bs-toggle="tooltip" title="Bu hizmet artık verilmiyor">
                                                    @s.Name
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-soft-info text-primary border border-primary border-opacity-10">
                                                    @s.Name
                                                </span>
                                            }
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted small">-</span>
                                }
                            </td>

                            <td class="pe-4 py-3 text-end">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light btn-sm text-dark border shadow-sm me-2" data-bs-toggle="tooltip" title="Düzenle">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-light btn-sm text-danger border shadow-sm"
                                       onclick="return confirm('@item.FullName isimli antrenörü silmek istediğinize emin misiniz?');"
                                       data-bs-toggle="tooltip" title="Sil">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>