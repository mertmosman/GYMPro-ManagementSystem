@model List<GymApp.Web.Entities.Trainer>

@{
    ViewData["Title"] = "Antrenör Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Antrenörler</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Yeni Antrenör Ekle
        </a>
    </div>

    <table class="table table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>Ad Soyad</th>
                <th>Uzmanlık</th>
                <th>Çalıştığı Salonlar</th>
                <th>Verdiği Hizmetler</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@item.FullName</td>
                    <td>@item.Specialty</td>
                    <td>
                        @if (item.Gyms != null && item.Gyms.Any())
                        {
                            @string.Join(", ", item.Gyms.Select(g => g.Name))
                        }
                        else
                        {
                            <span class="text-muted fst-italic">Salon Atanmamış</span>
                        }
                    </td>
                    <td>
                        @if (item.Services != null && item.Services.Any())
                        {
                            @foreach (var s in item.Services)
                            {
                                if (s.IsDeleted)
                                {
                                    // SENARYO 1: Hizmet Silinmiş (Soft Deleted)
                                    // Kırmızı ve üzeri çizili gösteriyoruz
                                    <div class="mb-1">
                                        <span class="badge bg-danger text-white position-relative">
                                            <span class="text-decoration-line-through">@s.Name</span>
                                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-dark">
                                                !
                                                <span class="visually-hidden">Silindi</span>
                                            </span>
                                        </span>
                                        <small class="text-danger d-block" style="font-size: 0.65em;">(Hizmet Kaldırıldı)</small>
                                    </div>
                                }
                                else
                                {
                                    // SENARYO 2: Hizmet Aktif
                                    // Standart Mavi Badge
                                    <span class="badge bg-info text-dark me-1 mb-1">@s.Name</span>
                                }
                            }
                        }
                        else
                        {
                            <span class="text-muted fst-italic">Hizmet Atanmamış</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id"
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('@item.FullName isimli antrenörü silmek istediğinize emin misiniz?');">
                            Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>