@model GymApp.Web.Entities.AppUser

@{
    ViewData["Title"] = "Üye Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ConcurrencyStamp" />

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h2 class="fw-bold mb-0">Üye Düzenle</h2>
                        <p class="text-muted small mb-0">@Model.FullName</p>
                    </div>

                    <div class="text-end">
                        <img src="https://ui-avatars.com/api/?name=@Model.FullName&background=e2e8f0&color=475569&size=64" class="rounded-circle shadow-sm" width="50" alt="Avatar">
                    </div>
                </div>

                <div class="card border-0 shadow-sm rounded-4 mb-4">
                    <div class="card-body p-4">
                        <h5 class="fw-bold text-dark mb-4">
                            <i class="bi bi-pencil-square text-warning me-2"></i>Hesap Bilgileri
                        </h5>

                        <div class="row g-3">
                            <div class="col-12">
                                <label class="form-label fw-bold small text-muted">AD SOYAD</label>
                                <input asp-for="FullName" class="form-control form-control-lg bg-light border-0" />
                            </div>

                            <div class="col-12">
                                <label class="form-label fw-bold small text-muted">E-POSTA</label>
                                <input asp-for="Email" class="form-control bg-light border-0" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold small text-muted">DOĞUM TARİHİ</label>
                                <input asp-for="BirthDate" type="date" class="form-control bg-light border-0" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold small text-muted">CİNSİYET</label>
                                <select asp-for="Gender" class="form-select bg-light border-0">
                                    <option value="Erkek">Erkek</option>
                                    <option value="Kadın">Kadın</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-warning btn-lg shadow fw-bold text-dark">
                        <i class="bi bi-save me-2"></i>Değişiklikleri Güncelle
                    </button>
                    <a asp-action="Index" class="btn btn-light text-muted">Değişiklikleri İptal Et</a>
                </div>
            </form>
        </div>
    </div>
</div>