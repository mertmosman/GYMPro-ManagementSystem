@model List<GymApp.Web.Entities.Appointment>

@{
    ViewData["Title"] = "Randevu Yönetimi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .bg-soft-warning {
        background-color: #fff7ed;
        color: #c2410c;
    }

    .bg-soft-success {
        background-color: #f0fdf4;
        color: #15803d;
    }

    .bg-soft-danger {
        background-color: #fef2f2;
        color: #b91c1c;
    }

    .bg-soft-info {
        background-color: #eff6ff;
        color: #1d4ed8;
    }

    .table-responsive {
        overflow-x: auto;
    }

    .avatar-circle {
        width: 40px;
        height: 40px;
        background-color: #e2e8f0;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        color: #475569;
    }

    .table th {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-weight: 600;
        color: #64748b;
        background-color: #f8fafc;
        border-bottom: 1px solid #e2e8f0;
        padding: 1rem;
    }

    .table td {
        padding: 1rem;
        border-bottom: 1px solid #f1f5f9;
        font-size: 0.9rem;
    }

    .btn-action {
        width: 32px;
        height: 32px;
        padding: 0;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 6px;
        transition: all 0.2s;
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-1">Randevu Talepleri</h2>
            <p class="text-muted mb-0">Toplam <span class="fw-bold text-primary">@Model.Count</span> başvuru listeleniyor.</p>
        </div>
        <div>
            <button class="btn btn-white border shadow-sm text-muted">
                <i class="bi bi-filter me-2"></i>Filtrele
            </button>
            <button class="btn btn-primary shadow-sm ms-2">
                <i class="bi bi-download me-2"></i>Dışa Aktar
            </button>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden bg-white">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th class="ps-4">Üye Bilgisi</th>
                        <th>Tarih & Saat</th>
                        <th>Hizmet / Eğitmen</th>
                        <th>Durum</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <img src="https://ui-avatars.com/api/?name=@item.AppUser.FullName&background=random&color=fff&size=128"
                                         class="rounded-circle me-3 shadow-sm"
                                         width="45" height="45"
                                         alt="Avatar">
                                    <div>
                                        <h6 class="mb-0 fw-bold text-dark">@item.AppUser.FullName</h6>
                                        <small class="text-muted" style="font-size: 0.8rem;">@item.AppUser.Email</small>
                                    </div>
                                </div>
                            </td>

                            <td>
                                <div class="d-flex flex-column">
                                    <span class="fw-semibold text-dark">@item.AppointmentDate.ToString("d MMMM yyyy")</span>
                                    <span class="text-muted small"><i class="bi bi-clock me-1"></i>@item.AppointmentDate.ToString("HH:mm")</span>
                                </div>
                            </td>

                            <td>
                                <span class="badge bg-soft-info px-2 py-1 mb-1 border border-info border-opacity-10 rounded-pill">
                                    @item.Service.Name
                                </span>
                                <div class="small text-muted mt-1">
                                    <i class="bi bi-person me-1"></i>@item.Trainer.FullName
                                </div>
                            </td>

                            <td>
                                @if (item.Status == "Beklemede")
                                {
                                    <span class="badge bg-soft-warning px-3 py-2 rounded-pill border border-warning border-opacity-25">
                                        <i class="bi bi-hourglass-split me-1"></i>Bekliyor
                                    </span>
                                }
                                else if (item.Status == "Onaylandı")
                                {
                                    <span class="badge bg-soft-success px-3 py-2 rounded-pill border border-success border-opacity-25">
                                        <i class="bi bi-check-circle me-1"></i>Onaylandı
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-soft-danger px-3 py-2 rounded-pill border border-danger border-opacity-25">
                                        <i class="bi bi-x-circle me-1"></i>Reddedildi
                                    </span>
                                }
                            </td>

                            <td class="text-end pe-4">
                                @if (item.Status == "Beklemede")
                                {
                                    <div class="d-flex justify-content-end gap-2">
                                        <a asp-action="Approve" asp-route-id="@item.Id"
                                           class="btn btn-success btn-sm px-3 shadow-sm"
                                           data-bs-toggle="tooltip" title="Onayla">
                                            <i class="bi bi-check-lg"></i>
                                        </a>
                                        <a asp-action="Reject" asp-route-id="@item.Id"
                                           class="btn btn-outline-danger btn-sm px-3"
                                           data-bs-toggle="tooltip" title="Reddet">
                                            <i class="bi bi-x-lg"></i>
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <button class="btn btn-light btn-sm text-muted border-0" disabled>
                                        <i class="bi bi-lock-fill me-1"></i>İşlem Kapalı
                                    </button>
                                }
                            </td>
                        </tr>
                    }

                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <div class="text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                                    <span>Henüz bir randevu talebi bulunmuyor.</span>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card-footer bg-white border-0 py-3">
            <div class="d-flex justify-content-end">
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item disabled"><a class="page-link" href="#">Geri</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">İleri</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>