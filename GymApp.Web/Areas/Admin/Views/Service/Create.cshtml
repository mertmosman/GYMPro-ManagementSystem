@model GymApp.Web.Entities.Service

@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <form asp-action="Create" method="post">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="fw-bold mb-0">Yeni Hizmet Tanımla</h2>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Geri Dön</a>
                </div>

                <div class="card border-0 shadow-sm rounded-4 mb-4">
                    <div class="card-body p-4">

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold small text-muted">HİZMET ADI</label>
                            <input asp-for="Name" class="form-control form-control-lg bg-light border-0" placeholder="Örn: Pilates Reformer" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold small text-muted">BAĞLI OLDUĞU SALON</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0"><i class="bi bi-building"></i></span>
                                <select asp-for="GymId" class="form-select bg-light border-0" asp-items="ViewBag.Gyms">
                                    <option value="">-- Salon Seçiniz --</option>
                                </select>
                            </div>
                            <span asp-validation-for="GymId" class="text-danger small"></span>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="DurationMinutes" class="form-label fw-bold small text-muted">SÜRE</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"><i class="bi bi-clock"></i></span>
                                    <input asp-for="DurationMinutes" type="number" class="form-control bg-light border-0" placeholder="60" />
                                    <span class="input-group-text bg-light border-0 text-muted">dk</span>
                                </div>
                                <span asp-validation-for="DurationMinutes" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label fw-bold small text-muted">ÜCRET</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0 fw-bold text-success">₺</span>
                                    <input asp-for="Price" type="number" step="0.01" class="form-control bg-light border-0" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>
                        </div>

                    </div>
                    <div class="card-footer bg-white border-0 p-4 pt-0">
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg shadow fw-bold">
                                <i class="bi bi-check-lg me-2"></i>Hizmeti Kaydet
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>