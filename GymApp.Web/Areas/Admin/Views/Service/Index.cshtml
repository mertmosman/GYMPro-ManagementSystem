@model List<GymApp.Web.Entities.Service>

@{
    ViewData["Title"] = "Hizmet Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-1">Hizmetler</h2>
            <p class="text-muted mb-0">Salonlarda sunulan paket ve hizmetlerin yönetimi</p>
        </div>
        <a asp-action="Create" class="btn btn-primary shadow-sm px-4">
            <i class="bi bi-plus-lg me-2"></i>Yeni Hizmet Ekle
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden bg-white">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 text-secondary text-uppercase small fw-bold">Hizmet Detayı</th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold">Salon</th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold">Süre & Ücret</th>
                        <th class="pe-4 py-3 text-secondary text-uppercase small fw-bold text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || Model.Count == 0)
                    {
                        <tr>
                            <td colspan="4" class="text-center py-5 text-muted">
                                <i class="bi bi-clipboard-x fs-1 d-block mb-2"></i>
                                Henüz tanımlı bir hizmet bulunmamaktadır.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="d-flex align-items-center justify-content-center bg-light text-primary rounded-3 me-3" style="width: 45px; height: 45px;">
                                            <i class="bi bi-activity fs-5"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0 fw-bold text-dark">@item.Name</h6>
                                            <small class="text-muted" style="font-size: 0.75rem;">ID: #@item.Id</small>
                                        </div>
                                    </div>
                                </td>

                                <td>
                                    <span class="badge bg-white text-dark border shadow-sm fw-normal">
                                        <i class="bi bi-building me-1 text-muted"></i>@item.Gym?.Name
                                    </span>
                                </td>

                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="fw-bold text-success">@item.Price.ToString("C2")</span>
                                        <small class="text-muted">
                                            <i class="bi bi-clock me-1"></i>@item.DurationMinutes dk
                                        </small>
                                    </div>
                                </td>

                                <td class="pe-4 py-3 text-end">
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light btn-sm text-dark border shadow-sm me-2" data-bs-toggle="tooltip" title="Düzenle">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-light btn-sm text-danger border shadow-sm"
                                           onclick="return confirm('Bu hizmeti silmek istediğinize emin misiniz?');"
                                           data-bs-toggle="tooltip" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>