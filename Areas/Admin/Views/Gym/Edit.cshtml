@model GymApp.Web.Entities.Gym

@{
    ViewData["Title"] = "Salon Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Spor Salonunu Düzenle</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Salon Adı</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label">Adres</label>
                    <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <hr />
                <h5>Çalışma Saatleri</h5>
                <div class="table-responsive">
                    <table class="table table-bordered table-sm">
                        <thead class="table-light">
                            <tr>
                                <th>Gün</th>
                                <th class="text-center">Kapalı mı?</th>
                                <th>Açılış</th>
                                <th>Kapanış</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Schedules.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <input type="hidden" asp-for="Schedules[i].Id" />
                                        <input type="hidden" asp-for="Schedules[i].GymId" />
                                        <input type="hidden" asp-for="Schedules[i].Day" />

                                        @Model.Schedules[i].Day
                                    </td>
                                    <td class="text-center align-middle">
                                        <div class="form-check form-switch d-flex justify-content-center">
                                            <input class="form-check-input" type="checkbox" asp-for="Schedules[i].IsClosed">
                                        </div>
                                    </td>
                                    <td>
                                        <input type="time" class="form-control form-control-sm" asp-for="Schedules[i].OpeningTime" />
                                    </td>
                                    <td>
                                        <input type="time" class="form-control form-control-sm" asp-for="Schedules[i].ClosingTime" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-3">
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                    <button type="submit" class="btn btn-warning">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>