@model List<GymApp.Web.Entities.Service>

@{
    ViewData["Title"] = "Hizmet Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Hizmetler</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Yeni Hizmet Ekle
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Hizmet Adı</th>
                <th>Salon</th>
                <th>Süre (Dk)</th>
                <th>Ücret</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Gym?.Name</td>
                    <td>@item.DurationMinutes dk</td>
                    <td>@item.Price.ToString("C2")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"
                           onclick="return confirm('Silmek istiyor musunuz?');">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>